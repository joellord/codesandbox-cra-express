{
  "setupTasks": ["install client deps", "install server deps"],

  "tasks": {
    "install client deps": {
      "name": "install dep client",
      "command": "cd client && npm install"
    },
    "install server deps": {
      "name": "install dep server",
      "command": "cd server && npm install"
    },

    "start client": {
      "name": "start client",
      "command": "cd client && npm start",
      "runAtStart": true
    },
    "start server": {
      "name": "start server",
      "command": "cd server && npm start",
      "runAtStart": true
    }
  }
}
